<mvc:View controllerName="project1.controller.View"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">

    <Page showHeader="false" class="loginBackgroundPage">
        <content>
            <VBox class="loginWrapper" justifyContent="Center" alignItems="Center">
                <VBox class="loginCardBox">
                    <HBox justifyContent="Center" alignItems="Center" class="loginTitleBox">
                        <Title text="Login" level="H3" />
                    </HBox>

                    <Label text="Name" class="sapUiSmallMarginTop" />
                    <Input id="username" icon="sap-icon://person-placeholder" placeholder="Enter your name" value="{loginMdl>/name}" class="loginInput" />

                    <Label text="Password" class="sapUiSmallMarginTop" />
                    <Input id="password" icon="sap-icon://lock" placeholder="Enter your password" type="Password" value="{loginMdl>/password}" class="loginInput" />
                    <HBox justifyContent="SpaceBetween" class="loginOptions">
                        <CheckBox text="Remember me" />
                        <Link text="Forgot password?" />
                    </HBox>
                    <Button text="Login Now" type="Emphasized" class="loginButton" press="onPressLogin" />

                    <HBox justifyContent="Center">
                        <Text text="Not a member? " />
                        <Link text="Signup Now" />
                    </HBox>
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
